{
  "name": "Create & Manage Reminders",
  "description": "Set reminder & get alerted by a notification",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "alarms"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
      "default_title": "Create & Manage Reminders",
      "default_icon": "icon.png",
      "default_popup": "index.html"
  }
}